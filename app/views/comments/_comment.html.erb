<div class="comment-product comment-<%= comment.id %>">
  <div class="comment-name"><b><%= comment.user.name %></b></div>
  <div><%= comment.content %></div>
  <div class="comment-time">
    <%= time_ago_in_words comment.created_at.in_time_zone(t "time.zone") %>
      <%= t "products.show.ago" %>
  </div>
  <% if logged_in? &&
    (comment.user.current_user?(current_user) || current_user.admin?) %>
    <%= link_to t("products.delete"), product_comment_path(@product, comment),
      remote: true, method: :delete, data: {confirm: t("data.confirm")} %>
  <% end %>
</div>
