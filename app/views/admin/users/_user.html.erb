<tr>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.phone %></td>
  <td><%= user.activated? ? t(".activated") : t(".not_activate") %></td>
  <td><%= user.admin? ? t(".admin") : t(".customer") %></td>
  <td>
    <%= link_to t(".edit"), edit_admin_user_path(user), class: "btn btn-info" %>
  </td>
  <td>
    <%= link_to t("delete"), admin_user_path(user),
      class: "btn btn-danger #{'disabled' if user.admin? }",
      method: :delete, data: {confirm: t("data.confirm")} %>
  </td>
</tr>
